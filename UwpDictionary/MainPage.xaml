<Page
    x:Class="UwpDictionary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpDictionary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vungle="using:VungleSDK.UI"
    NavigationCacheMode="Enabled"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <FontFamily
            x:Key="AppFont">Suwannaphum</FontFamily>
        <FontFamily
            x:Key="IconFont">Segoe MDL2 Assets</FontFamily>
    </Page.Resources>
    <Grid>
        <ui:NavigationView
            BackRequested="NavView_BackRequested"
            x:Name="NavView"
            ItemInvoked="NavigationView_ItemInvoked"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            PaneDisplayMode="Left"
            IsBackEnabled="True"
            OpenPaneLength="220">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="HomeNavItem"
                    Tag="home">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xe80f;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="HistoryNavItem"
                    Tag="history">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xe81c;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="BookmarkNavItem"
                    Tag="bookmark">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xe8a4;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    SelectsOnInvoked="False"
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="VideoAdNavItem"
                    Tag="video_ad">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xE714;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="AboutNavItem"
                    Tag="about">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xe946;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    FontSize="16"
                    FontFamily="{StaticResource AppFont}"
                    x:Uid="SettingsNavItem"
                    Tag="settings">
                    <ui:NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="{StaticResource IconFont}"
                            Glyph="&#xe713;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Frame
                    x:Name="ContentFrame"
                    IsNavigationStackEnabled="True" />
                <StackPanel
                    Orientation="Vertical"
                    Grid.Row="1">
                    <TextBlock
                        x:Uid="AdTextBlock"
                        FontFamily="{StaticResource AppFont}"
                        FontSize="12"
                        Margin="0,0,0,4"
                        HorizontalAlignment="Center" />
                    <vungle:VungleAdControl
                        HorizontalAlignment="Center"
                        x:Name="VungleBanner"
                        AutomationProperties.AutomationId="vungleBannerControl"
                        IsBannerAd="True"
                        AutoRun="True"
                        Width="728"
                        Height="90"
                        AppID="5c91b152974c19001132e471"
                        Placement="BANNER-4643114" />
                </StackPanel>
            </Grid>
        </ui:NavigationView>
    </Grid>
</Page>
